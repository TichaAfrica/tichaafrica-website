<script>
  const form = document.getElementById('insightForm');
  const textarea = document.getElementById('insight');
  const button = document.getElementById('submitBtn');

  // Restore saved response if user returns
  textarea.value = localStorage.getItem('tichaInsight') || '';

  textarea.addEventListener('input', () => {
    localStorage.setItem('tichaInsight', textarea.value);
  });

  form.addEventListener('submit', (e) => {
    e.preventDefault();

    if (!textarea.value.trim()) return;

    button.disabled = true;
    button.textContent = 'Submittingâ€¦';

    localStorage.setItem('tichaInsightSubmitted', 'true');

    // Redirect to thank you page
    window.location.href = '/alliance/thank-you/';
  });

  // Prevent resubmission
  if (localStorage.getItem('tichaInsightSubmitted')) {
    window.location.href = '/alliance/thank-you/';
  }
</script>

